<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>Edit Answer</h1>
      <%= form_with model: [:admin, @answer], local: true do |f| %>
        <div class="form-group">
          <%= f.label :lessonid %>
          <%= f.collection_select :lesson_id, Lesson.all, :id, :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :本文 %>
          <div data-controller="codemirror" data-codemirror-doc-value="<%= f.object.content %>">
            <div data-codemirror-target="editor">
              <%= f.hidden_field :content, class: 'form-control', data: {codemirror_target: "input"} %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :解説 %>
          <div data-controller="codemirror" data-codemirror-doc-value="<%= f.object.content %>">
            <div data-codemirror-target="editor">
              <%= f.hidden_field :explanation, class: 'form-control', data: {codemirror_target: "input"} %>
            </div>
          </div>
        </div>
        <div class='mt-3 mb-3'>
          <%= f.label :true_or_false %>
            <%= f.radio_button :answer, :true %>
            <%= f.label :answer, "正解" %><br />
            <%= f.radio_button :answer, :false %>
            <%= f.label :answer, "不正解" %><br />
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
