<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>Show Category</h1>
      <div class="text-right mb-3">
        <%= link_to "Index", admin_categories_path, class: 'btn btn-info' %>
        <%= link_to "Edit", edit_admin_category_path(@category), class: 'btn btn-success' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row">ID</th>
          <td><%= @category.id %></td>
        </tr>
        <tr>
          <th scope="row">名前</th>
          <td><%= @category.title %></td>
        </tr>
        <tr>
          <th scope="row">本文</th>
          <td><pre><code><%= @category.content %></code></pre></td>
        </tr>
      </table>
    </div>
  </div>
</div>
