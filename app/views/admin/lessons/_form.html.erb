<%= form_with model: [:admin, @lesson], local: true do |f| %>
  <div class="form-group">
    <%= f.label :courseid %>
    <%= f.collection_select :course_id, Course.all, :id, :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <div data-controller="codemirror" data-codemirror-doc-value="<%= f.object.content %>">
      <div data-codemirror-target="editor">
        <%= f.hidden_field :content, class: 'form-control', data: {codemirror_target: "input"} %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hints %>
    <div data-controller="codemirror" data-codemirror-doc-value="<%= f.object.hints %>">
      <div data-codemirror-target="editor">
        <%= f.hidden_field :hints, class: 'form-control', data: {codemirror_target: "input"} %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :starter_code %>
    <div data-controller="codemirror" data-codemirror-doc-value="<%= f.object.starter_code %>">
      <div data-codemirror-target="editor">
        <%= f.hidden_field :starter_code, class: 'form-control', data: {codemirror_target: "input"} %>
      </div>
  </div>
  <div class='mt-3 mb-3'>
    <%= f.label :published %>
      <%= f.radio_button :published, :true %>
      <%= f.label :published, "公開" %><br />
      <%= f.radio_button :published, :false %>
      <%= f.label :published, "非公開" %><br />
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
