<%= form_with model: [:admin, @lesson], local: true do |f| %>
  <div class="form-group">
    <%= f.label :courseid %>
    <%= f.collection_select :course_id, Course.all, :id, :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <div data-controller="codemirror">
      <div data-codemirror-target="editor"></div>
      <%= f.text_area :content, class: 'form-control', rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tips %>
    <%= f.text_area :tips, class: 'form-control', rows: 10 %>
  </div>
  <div class='mt-3 mb-3'>
    <%= f.label :published %>
      <%= f.radio_button :published, :true %>
      <%= f.label :published, "公開" %><br />
      <%= f.radio_button :published, :false %>
      <%= f.label :published, "非公開" %><br />
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
